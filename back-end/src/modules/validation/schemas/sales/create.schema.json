{
  "type": "object",
  "properties": {
    "userId": {
      "type": "number",
      "minimum": 1,
      "errorMessage": "Invalid user id"
    },
    "sellerId": {
      "type": "number",
      "minimum": 1,
      "errorMessage": "Invalid seller id"
    },
    "totalPrice": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]{2}$",
      "errorMessage": "Invalid total price"
    },
    "deliveryAddress": {
      "type": "string",
      "errorMessage": "Invalid delivery address"
    },
    "deliveryNumber": {
      "type": "string",
      "errorMessage": "Invalid delivery number"
    },
    "products": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "productId": {
            "type": "number",
            "minimum": 1,
            "errorMessage": "Invalid product id"
          },
          "quantity": {
            "type": "number",
            "minimum": 1,
            "errorMessage": "Invalid quantity"
          }
        },
        "required": [
          "productId",
          "quantity"
        ]
      }
    }
  },
  "required": ["name", "email", "password"],
  "additionalProperties": false
}
